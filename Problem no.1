class Book:
    """
    Represents a single book in the library.
    """
    def __init__(self, title, author, year, isbn, pages):
        self.title = title
        self.author = author
        self.year = year
        self.isbn = isbn
        self.pages = pages

    def __str__(self):
        return f"Title: {self.title}, Author: {self.author}, Year: {self.year}, ISBN: {self.isbn}, Pages: {self.pages}"

class Library:
    """
    Represents a library system to manage a collection of books.
    """
    def __init__(self):
        self.books = []

    def add_book(self, title, author, year, isbn, pages):
        """Adds a new book to the library."""
        new_book = Book(title, author, year, isbn, pages)
        self.books.append(new_book)
        print(f"Book '{title}' has been added to the library.\n")

    def display_books(self):
        """Displays all books in the library."""
        if not self.books:
            print("The library has no books.\n")
        else:
            print("Books in the library:")
            for idx, book in enumerate(self.books, start=1):
                print(f"{idx}. {book}")
            print()

    def search_by_title(self, search_title):
        """Searches for books by title."""
        found_books = [book for book in self.books if search_title.lower() in book.title.lower()]
        if not found_books:
            print(f"No books found with title containing '{search_title}'.\n")
        else:
            print(f"Books found with title containing '{search_title}':")
            for idx, book in enumerate(found_books, start=1):
                print(f"{idx}. {book}")
            print()

    def run(self):
        """Runs the library management system in a loop."""
        while True:
            print("Library Management System")
            print("1. Add a new book")
            print("2. Display all books")
            print("3. Search for books by title")
            print("4. Exit")
            choice = input("Enter your choice (1-4):")

            if choice == '1':
                title = input("Enter book title: ")
                author = input("Enter book author: ")
                year = int(input("Enter year of publication: "))
                isbn = input("Enter ISBN: ")
                pages = int(input("Enter number of pages: "))
                self.add_book(title, author, year, isbn, pages)

            elif choice == '2':
                self.display_books()

            elif choice == '3':
                search_title = input("Enter title to search: ")
                self.search_by_title(search_title)

            elif choice == '4':
                print("Exiting the program. Goodbye!")
                break

            else:
                print("Invalid choice. Please try again.\n")

# Main Program
if __name__ == "__main__":
    library = Library()
    library.run()

